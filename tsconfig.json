{
  "extends": "@tsconfig/node18/tsconfig.json",
  "exclude": ["packages", "src"],
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@tasks/*": ["./src/Tasks/*"],
      "@common/*": ["./src/common/*"]
    },
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata"],
    "strict": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
